/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  align-items: center;
  justify-content: center;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  padding: 40rpx;
  border: 1rpx solid #e4e4e4;
  background: #f9f9f9;
  border-radius: 10rpx;
  margin:0 40rpx;

}

.usermotto2 {
  margin:0 50rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.user-motto {
  font-size: 28rpx;
  line-height: 60rpx;
  color: #000000;
  word-break: break-all;
}

.hidden {
    opacity: 0;
    display: none;
}

button {
	width: 100%;
	height: 128rpx;
	line-height: 128rpx;
	background: #e64340;
	color: white;
	font-size: 40rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	border-radius: 0;
}
