.container{
    padding: 0;
}

.container2 {
    flex: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: content-box;
    float: left;
    padding: 20rpx;
} 

input {
    width: 100%;
    height: 128rpx;
    line-height: 128rpx;
    margin-top: 20rpx;
    border: 1rpx solid #e7e7eb;
    float: left;
    margin: 10rpx 0;
    padding: 0 10rpx;
    box-sizing: border-box;
    background: #ffffff;
}

button {
    width: 100%;
    height: 128rpx;
    line-height: 128rpx;
    margin-top: 20rpx;
    float: left;
    margin: 10rpx 0;
    background: #e64340;
    color: #ffffff;
}

.input-placeholder {
    color: #ccc;
}
