.container {
    padding: 0 10rpx;
}

.container2 {
    background: #ffffff;
}

.item {
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    float: left;
    padding: 0 10rpx;
    box-sizing: border-box;
    position: relative;
    background: #ffffff;
    font-size: 32rpx;
    font-weight: bold;
    border-top: 1rpx solid #e7e7eb;
}

.item:first-child{
    border-top: 0;
}

.icon{
    position: absolute;
    right: 0; 
    top: 0;
    width: 60rpx;
    height: 120rpx;
}

.icon-img{
    width: 40rpx;
    height: 40rpx;
    transform:rotate(90deg);
    margin-top: 36rpx;
}

.section {
    background:#ffffff;
    margin:20rpx;
    padding:20rpx;
    color: #aaa;
    border-radius: 10rpx;
    font-size: 30rpx;
}

.userinfo-avatar2 {
    width: 300rpx;
    height: 300rpx;
    margin-top: 300rpx;
}

.toast {
    height: 80rpx;
    line-height: 80rpx;
    background: rgba(255, 127, 2, 0.5);
    color: white;
    font-size: 28rpx;
    padding: 0 20rpx;
}

