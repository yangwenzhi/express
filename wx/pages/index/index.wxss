.container {
  	padding: 0;
}

.header {
	background: #3481eb;
	width: 100%;
	height: 200rpx;
}

.select {
	background: #ffffff;
	height: 70rpx;
	border-radius: 5rpx;
	padding: 0 10rpx;
	margin: 50rpx;
	position: relative;
}

.input {
	float: left;
	height:70rpx;
	width: 90%;
	line-height: 70rpx;
	font-size: 30rpx;
	color: #000000;
}

.input-placeholder {
	float: left;
	height:70rpx;
	width: 90%;
	line-height: 70rpx;
	font-size: 30rpx;
	color: #cccccc;
}

.userinfo-avatar {
	width: 40rpx;
	height: 40rpx;
	position: absolute;
	top: 15rpx;
	right: 15rpx;
	z-index: 2;
}

.result {
	width: 100%;
	margin-top: 50rpx;
}

.usermotto {
	padding: 40rpx;
	border: 1rpx solid #e4e4e4;
	background: #f9f9f9;
	border-radius: 10rpx;
	margin:0 40rpx;
}

.usermotto2 {
	margin:0 50rpx;
	margin-bottom: 10rpx;
	font-weight: bold;
}

.user-motto {
	font-size: 28rpx;
	line-height: 60rpx;
	color: #000000;
	word-break: break-all;
}
