@import "../../wxSortPickerView/wxSortPickerView.wxss";

.container{
    padding: 0;
    background: #ffffff;
}

.item {
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    float: left;
    padding: 0 10rpx;
    box-sizing: border-box;
    position: relative;
    background: #ffffff;
    font-size: 32rpx;
    font-weight: bold;
    border-top: 1rpx solid #e7e7eb;
}

.item:first-child{
    border-top: 0;
}

.icon{
    position: absolute;
    right: 0; 
    top: 0;
    width: 60rpx;
    height: 120rpx;
}

.icon-img{
    width: 40rpx;
    height: 40rpx;
    transform:rotate(90deg);
    margin-top: 36rpx;
}

.outer{
    position: fixed;
    right: 0; 
    bottom: 0;
    width: 120rpx;
    height: 120rpx;
}

.outer-img{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.bar {
    width: 100%;
    height: 100rpx;
    text-align: left;
    font-size: 32rpx;
    padding: 0 20rpx;
    line-height: 100rpx;
}

.userinfo-avatar2 {
    float: left;
    width: 50rpx;
    height: 50rpx;
    margin: 25rpx 15rpx;
}