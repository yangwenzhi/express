.container{
    padding: 0;
    width: 100%;
    overflow: hidden;
}

.header {
    background: #ffffff;
    padding: 10rpx 20rpx;
    width: 100%;
}

.userinfo-avatar {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
}

.header-content {
    float: left;
    font-size: 28rpx;
    color: #aaaaaa;
    width: 100%;
}

.header-item0 {
    margin-top: 25rpx;
    color: #000000;
    float: left;
    width: 35%;
    text-align: center;
    margin-right: 20rpx;
}

.header-item1 {
    margin-top: 35rpx;
    float: left;
    width: 30%;
}

.header-item {
    width: 100%;
    height: 64rpx;
}

.header-item-1 {
    width: 100%;
    text-align: center;
}

.header-item-2 {
    width: 100%;
    text-align: center;
    margin-top: 10rpx;
    font-weight: bold;
}

navigator{
    width: 100%;
    height: 100rpx;
}
.item {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    float: left;
    padding: 0 10rpx;
    box-sizing: border-box;
    position: relative;
    background: #ffffff;
    font-size: 32rpx;
    margin-top: 15rpx;
}

.icon{
    position: absolute;
    right: 0; 
    top: 0;
    width: 60rpx;
    height: 100rpx;
}

.icon-img{
    width: 40rpx;
    height: 40rpx;
    transform:rotate(90deg);
    margin-top: 26rpx;
}

.userinfo-avatar2 {
    float: left;
    width: 50rpx;
    height: 50rpx;
    margin: 25rpx;
    border-radius: 50%;
}

.userinfo-text {
    float: left;
    font-size: 30rpx;
}

.red {
    color: red;
}

.green {
    color: green;
}

.black {
    color: black;
}
