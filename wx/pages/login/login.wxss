.container{
	padding: 0;
}

.container2 {
	flex: 1;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	box-sizing: content-box;
	float: left;
	padding: 20rpx;
} 

input {
	width: 100%;
	height: 128rpx;
	line-height: 128rpx;
	margin-top: 20rpx;
	border: 1rpx solid #e7e7eb;
	float: left;
	margin: 10rpx 0;
	padding: 0 10rpx;
	box-sizing: border-box;
    background: #ffffff;
}

button {
	width: 100%;
	height: 128rpx;
	line-height: 128rpx;
	margin-top: 20rpx;
	float: left;
	margin: 10rpx 0;
    background: #e64340;
    color: #ffffff;
}

.msg{
	padding: 50rpx;
	line-height: 60rpx;
}

.number {
    font-size: 48rpx;
    color: #2ba246;
    font-weight: bold;
}

.form-list {
    position: relative;
    margin-bottom: 20rpx;
}

.form-list:first-child {
    margin-top: 20rpx;
}

.form-list::before, .form-list::after {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    height: 1px;
    width: 100%;
    transform: scaleY(.5);
    background-color: #e3e3e3;
}

.form-list::before {
    top: 0;
}

.form-list::after {
    bottom: 0;
}

.form-item {
    position: relative;
    width: 100%;
	height: 128rpx;
	line-height: 128rpx;
	margin-top: 20rpx;
	border: 1rpx solid #e7e7eb;
	float: left;
	margin: 10rpx 0;
	padding: 0 10rpx;
	box-sizing: border-box;
    background: #ffffff;
}

.form-item::before {
    content: '';
    display: block;
    position: absolute;
    z-index: 99;
    left: 0;
    top: 0;
    width: 100%;
    transform: scaleY(.5);
    background-color: #e1e1e1;
}

.form-item-hd {
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.form-item-bd {
    flex: 1;
    height: 60rpx;
}

switch {
    position: absolute;
    right: 40rpx;
    top: 50%;
    margin-right: -10rpx;
    margin-top: -16px;
    transform: scale(0.9);
    transform-origin: right center;
}

.input-placeholder {
    color: #ccc;
}

.save-btn {
    width: 100%;
    height: 100rpx;
    margin: 0 auto;
    font-size: 32rpx;
    text-align: center;
    line-height: 100rpx;
    background-color: #e64340;
    border-radius: 6rpx;
    color: #fff;
}

.save-btn:active {
    background-color: #e64340;
}

.hidden {
    opacity: 0;
    display: none;
}

.message {
    position: fixed;
    top: 80%;
    left: 50%;
    width: 400rpx;
    height: 80rpx;
    margin-left: -200rpx;
    background-color: rgba(0, 0, 0, .75);
    border-radius: 20px;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    opacity: 0;
}

.fade-in {
    animation: fadeIn .3s forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    -webkit-transform: none;
    transform: none;
  }
}

.area-item {
    line-height: 40px;
    text-align: center;
}

.distpicker {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 560rpx;
    justify-content: center;
    flex-wrap: wrap;
    background-color: #fff;
}

.distpicker-btn {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    width: 100%;
    padding: 0 40rpx;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #fafafa;
    color: #18bf17;
    border-bottom: 1rpx solid #eee;
}

.distpicker-cancel-btn {
	color: #9e9e9e;
}

.distpicker-content {
    box-sizing: border-box;
    width: 100%;
    height: 560rpx;
    background-color: #fff;
}

.mask {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 998;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .4);
}